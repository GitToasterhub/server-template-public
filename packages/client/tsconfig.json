{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "allowJs": false,
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "strictPropertyInitialization": false,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "paths": {
      "proto/*": [
        "../../src/app/grpc/proto/generated/*"
      ]
    }
  }
}