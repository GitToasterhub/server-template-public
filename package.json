{
  "name": "service-template",
  "version": "0.0.1",
  "description": "JOIN service template",
  "repository": "git@github.com:join-com/service-template.git",
  "author": "JOIN team",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=14.5.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.7",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "env-cmd": "^10.1.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.18.2",
    "eslint-plugin-node": "^11.1.0",
    "husky": ">=4",
    "jest": "^26.1.0",
    "lint-staged": ">=10",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "build": "tsc",
    "env:dev": "env-cmd -e defaults",
    "env:test": "env-cmd -e defaults,test",
    "env:ci": "env-cmd -e defaults,ci --no-override",
    "lint": "eslint . --ext .ts --max-warnings 0",
    "lint:fix": "yarn lint --fix",
    "makepretty": "prettier --write -l '**/*.ts'",
    "test": "yarn env:test jest",
    "test:watch": "yarn test --watch",
    "test:ci": "yarn env:ci jest --ci"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,__tests__}/**/*.ts": [
      "yarn lint:fix"
    ],
    "*.{js,ts}": [
      "yarn prettier --write"
    ]
  }
}
